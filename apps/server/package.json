{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/index.ts",
    "build": "tsc && npx mikro-orm-esm cache:generate --combined",
    "start": "tsc --noEmit && tsx -r tsconfig-paths/register src/index.ts",
    "test": "vitest",
    "lint": "eslint .",
    "format": "prettier --write \"src/**/*.{js,ts,graphql}\"",
    "generate": "graphql-codegen",
    "orm:debug": "mikro-orm-esm debug",
    "orm:migrate": "mikro-orm-esm migration:create"
  },
  "keywords": [],
  "dependencies": {
    "@graphql-tools/utils": "^10.2.2",
    "@mikro-orm/core": "^6.2.9",
    "@mikro-orm/migrations": "^6.2.9",
    "@mikro-orm/postgresql": "^6.2.9",
    "@mikro-orm/reflection": "^6.2.9",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-yoga": "^5.3.1",
    "prettier": "^3.3.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.4.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-resolvers": "^4.1.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.4",
    "@graphql-tools/schema": "^10.0.4",
    "@mikro-orm/cli": "^6.2.9",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@typescript-eslint/type-utils": "^7.13.0",
    "@typescript-eslint/utils": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^15.4.0",
    "reflect-metadata": "^0.2.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.15.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0",
    "vitest": "^1.6.0"
  },
  "mikro-orm": {
    "useTsNode": true
  }
}
