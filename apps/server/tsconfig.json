{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],

    "rootDirs": ["src"],
    "outDir": "dist",

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitReturns": true,

    "baseUrl": ".",
    "typeRoots": ["./@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    },

    "esModuleInterop": true,

    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts", "codegen.ts", "mikro-orm.config.ts"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
